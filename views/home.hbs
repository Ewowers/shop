<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/slider/slide1.jpg" class="d-block w-100" alt="..." />
    </div>
    <div class="carousel-item">
      <img src="/slider/ZQi3WsrUXYMNaNELhiyDJQ.jpg" class="d-block w-100" alt="..." />
    </div>
    <div class="carousel-item">
      <img src="/slider/maxresdefault.jpg" class="d-block w-100" alt="..." />
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Предыдущий</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Следующий</span>
  </button>
</div>

<div class="container-fluid mt-5">
  <div class="row align-self-auto">
    <a href="/catogory/backpacks" class="col-3">
      <img src="/category/backpacks.jpg" class="w-100" />
      <p class="h4 text-center">Рюкзаки, сумки, шопперы</p>
    </a>
    <a href="/catogory/figurines" class="col-3">
      <p class="h1">
        <img src="/category/figurines.jpg" class="w-100" />
        <p class="h4 text-center">Фигурки</p>
      </p>
    </a>
    <a href="/catogory/clothes" class="col-3">
      <img src="/category/clothes.jpg" class="w-100" />
      <p class="h4 text-center">Одежда</p>
    </a>
    <a href="/catogory/accessories" class="col-3">
      <img src="/category/accessories.jpg" class="w-100" />
      <p class="h4 text-center">Акссесуары</p>
    </a>
  </div>
</div>

<div class="container-fluid col-8">
  <div class="row">
    <div class="col-12">
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
          <a
            class="nav-link active"
            id="pills-home-tab"
            data-bs-toggle="pill"
            href="#pills-home"
            role="tab"
            aria-controls="pills-home"
            aria-selected="true"
          >Новинка</a>
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link"
            id="pills-profile-tab"
            data-bs-toggle="pill"
            href="#pills-profile"
            role="tab"
            aria-controls="pills-profile"
            aria-selected="false"
          >Популярное</a>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
          <div class="cardList">
            {{#each arr}}
              <div class="card">
                <img src={{img}} class="card-img-top w-100" alt="..." style="height: 300px;" />
                <div class="card-body">
                  <h5 class="card-title">{{name}}</h5>
                  <div class="d-flex justify-content-between align-items-center">
                    <p class="m-0">3500</p>
                    <button class="btn btn-primary buy" data-id="{{_id}}">
                      купить
                      <i class="fas fa-shopping-cart"></i>
                    </button>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
      </div>
    </div>
  </div>
</div>

<script src="/home/index.js"></script>