<div class="container">
  <div class="row">
    <form action="/admin" method="POST" enctype="multipart/form-data" class="col-3 mt-5">
      <input type="text" name="name" id="names" class="form-control creates" placeholder="name" />
      <input type="file" name="filedata" id="img" class="form-control" onchange="showFile(this)" />
      <input type="number" name="prise" id="prises" class="form-control creates" placeholder="prise" />
      <input type="number" name="que" id="que" class="form-control creates" placeholder="количество" />
      <select name="type" class="form-control">
        <option value="backpacks">Рюкзаки</option>
        <option value="figurines">Фигурки</option>
        <option value="clothes">Одежка</option>
        <option value="accessories">Акссесуары</option>
      </select>
      <button type="submit" class="btn btn-primary">sibmit</button>
    </form>
    <div class="col-3">
      <div class="card" style="width: 18rem;">
        <img src="/upload/product.jpg" class="card-img-top w-100" alt="isProduct" style="height: 300px;" id="cardimg" />
        <div class="card-body">
          <p><strong id="cardprises">0</strong>тг</p>
          <div class="d-flex"><span id="cardbrand">брэнд</span>/<span id="cardnames">имя</span></div>

        </div>
      </div>
    </div>
  </div>
</div>
