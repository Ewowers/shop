<div class="container-fluid col-8">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Главная</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
        </ol>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="cardList">
        {{#each product}}
          <div class="card">
            <img src={{img}} class="card-img-top w-100" alt="..." style="height: 300px;" />
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <div class="d-flex justify-content-between align-items-center">
                <p class="m-0">3500</p>
                <button class="btn btn-primary buy" data-id="{{_id}}">
                  купить
                  <i class="fas fa-shopping-cart"></i>
                </button>
              </div>
              <br />
              <p class="text-center mb-0">колличество {{que}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>